<!DOCTYPE html>
<html>
  <head>
    <title>Random Chat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-faded">
      <div class="container">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to "Random Chat", root_path, :class => 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <% if current_user.present? %>
              <div class="dropdown">
                <a class="avatar" data-toggle="dropdown"><%= current_user.short_name %> </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Add Friends', add_friend_path, class: 'nav-link' %></li>
                  <li><%= link_to 'My messages', messages_path, class: 'nav-link' %></li>
                  <li><%= link_to 'New Message', new_message_path, class: 'nav-link' %></li>
                  <li><%= link_to 'Log Out', log_out_path, method: :delete, class: 'nav-link' %></li>
                </ul>
              </div>
          <% end %>
        </div>
      </div>
    </nav>
    <%= flash_message %>
    <%= yield %>
  </body>
</html>
