<div class="container">
  <h1>Sent Messages</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <table class="table table-striped">
        <tbody>
          <% @messages.each do |m| %>
            <tr>
              <td><%= m.recipient.name %></td>
              <td><%= m.is_read ? m.read_at : 'Unread' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>