<div class="container">
  <h1>Create new message</h1>
  <div class="box">
    <%= form_for @message do |f| %>
      <%= f.hidden_field :sender_id %>
      <div class="form-group">
        <label>Recipient</label>
        <%= collection_select(:message, :recipient_id, current_user.friends, :id, :name, {}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <label>Subject</label>
        <%= f.text_field :subject, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Message</label>
        <%= f.text_area :body, class: 'form-control', rows: 6 %>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block" role="button">Send</button>
      </div>
    <% end %>
  </div>
</div>

