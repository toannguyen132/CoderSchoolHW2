<div class="container">
  <h1>View message from <%= @message.sender.name %></h1>

  <div class="message-item box">
    <% if @message.is_read %>
      <h3>Oh no, you have read this message!</h3>
    <% else %>
      <h3 class="mi-heading"><%= @message.subject %></h3>
      <div class="mi-content">
        <%= @message.body %>
      </div>
    <% end %>

    <div class="box-button">
      <%= link_to "Reply", new_message_path(recipient_id: @message.sender_id), class: "btn btn-primary" %>  
      <%= link_to "Go Back", messages_path, class: "btn btn-gray" %>  
    </div>
  </div>
  <% @message.set_read %>
</div>